<div class="row">
  <aside class="col-md-10">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br>
        <%= @title %>
      </h1>
    </section>
  </aside>
  <div class="col-md-10">
    <% @users.each do |user| %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Region</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.region %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>