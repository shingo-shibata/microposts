<div class="row">
  <aside class="col-md-4">
      <h1><%= gravatar_for @user %>
      <%= @user.name %></h1><br>
    <section class="user_info">
      email： <%= @user.email %><br>
      年齢：　<%= @user.age %><br>
      地域：　<%= @user.region %><br>
      プロフィール<br>
      <%= @user.profile %><br>
      <%= link_to "プロフィールを編集する", edit_user_path %><br>
      <%= link_to "your followers", followers_user_path(@user) %><br>
      <%= link_to "your followings", followings_user_path(@user) %><br>
      <%= link_to "your favorit posts", favorites_user_path(@user) %><br>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3><%= @title %> (<%= @count %>)</h3>
      <%= page_entries_info @microposts %>
      <ol class="microposts"><%= render @microposts %></ol>
    <% end %>
    <%= paginate @microposts %>
  </div>
</div>