<div class="row">
  <aside class="col-md-10">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br>
        your followers
      </h1>
    </section>
  </aside>
  <div class="col-md-10">
    <% @followers.each do |follower| %>
        <tr>
          <td>Name</td>
          <td>Region</td>
        </tr>
        <tr>
          <td><%= follower.name %></td>
          <td><%= follower.region %></td>
        </tr>
    <% end %>
  </div>
</div>